<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="3">

    <RelativeLayout
        android:id="@+id/yellowBox"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#fff3ee6b"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hello"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text=""
            android:textAlignment="center"
            android:textSize="30sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/navyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000080"
        android:text="textSize : 30sp \n textColor : #ffffffff"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:layout_below="@+id/yellowBox">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ff6df4c8"
        android:orientation="vertical"
        android:layout_below="@id/navyText"
        android:text="Layout background: #ff6df3c8"
        android:textAlignment="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/Btn3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/Btn2"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#ff000000"
        android:enabled="true"
        android:text="BTN3"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/Btn2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@id/Btn1"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:enabled="true"
        android:background="#fff36daf"
        android:text="BTN2"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/Btn1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#fff76e79"
        android:enabled="true"
        android:text="BTN1"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="150dp"/>

</RelativeLayout>